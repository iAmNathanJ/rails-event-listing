<div class="panel form__panel dark">
  <h2>Login</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <fieldset class="field full-width">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, autofocus: true, class: 'full-width' %>
    </fieldset>

    <fieldset class="field full-width">
      <%= f.label :password, class: 'label' %>
      <%= f.password_field :password, autocomplete: "off", class: 'full-width' %>
    </fieldset>

    <% if devise_mapping.rememberable? -%>
      <fieldset class="field full-width">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'label'%>
      </fieldset>
    <% end -%>

    <%= f.submit "Log in", class: 'button' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
