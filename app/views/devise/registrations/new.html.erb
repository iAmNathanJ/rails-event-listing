<div class="panel form__panel dark">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <fieldset class="field full-width">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, autofocus: true, class: 'full-width' %>
    </fieldset>

    <fieldset class="field full-width">
      <%= f.label :password, class: 'label' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: 'full-width' %>
    </fieldset>

    <fieldset class="field full-width">
      <%= f.label :password_confirmation, class: 'label' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'full-width' %>
    </fieldset>

    <%= f.submit "Sign up", class: 'button' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
