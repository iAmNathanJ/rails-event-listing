<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation" class="panel danger">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul class="copy-default">
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">

    <fieldset class="full-width">
      <%= f.label :datetime, 'Date / Time' %>
      <%= f.datetime_select :datetime %>
    </fieldset>

    <fieldset>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </fieldset>

    <fieldset>
      <%= f.label :state %>
      <%= f.text_field :state %>
    </fieldset>

    <fieldset class="full-width">
      <%= f.label :venue %>
      <%= f.text_field :venue, class: 'full-width' %>
    </fieldset>

    <fieldset>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </fieldset>

    <fieldset class="full-width">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'full-width' %>
    </fieldset>

    <%= f.submit class: 'button' %>
  </div>
<% end %>
